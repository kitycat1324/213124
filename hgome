                    <button class="btn btn-block" onclick="checkout()">Оформить заказ</button>
                </div>
            </div>
        </div>
        
        <!-- Страница товара -->
        <div id="product-page" class="page" style="display: none;">
            <!-- Контент страницы товара будет загружаться динамически -->
        </div>
    </main>

    <!-- Подвал -->
